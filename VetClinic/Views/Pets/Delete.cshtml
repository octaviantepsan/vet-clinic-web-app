@model VetClinic.Models.Pet

@{
    ViewData["Title"] = "Delete Pet";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger shadow-lg">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Delete Confirmation</h3>
                </div>
                <div class="card-body text-center p-5">
                    
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="rounded-circle mb-3 shadow" style="width: 120px; height: 120px; object-fit: cover;" />
                    }
                    else
                    {
                        <div class="display-1 text-muted mb-3"><i class="bi bi-github"></i></div>
                    }

                    <h2 class="card-title text-danger">Are you sure?</h2>
                    <p class="lead">Do you really want to delete <strong>@Model.Name</strong>?</p>
                    
                    <div class="alert alert-warning text-start small">
                        <i class="bi bi-info-circle"></i> <strong>Warning:</strong>
                        <ul class="mb-0">
                            <li>This action <strong>cannot</strong> be undone.</li>
                            <li>All medical history, appointments, and photos for this pet will be permanently removed.</li>
                        </ul>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="d-grid gap-2 d-sm-flex justify-content-center mt-4">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary px-4">
                                Cancel
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash3-fill"></i> Yes, Delete Pet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>