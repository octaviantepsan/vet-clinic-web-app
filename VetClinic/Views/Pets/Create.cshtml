@model VetClinic.Models.Pet

@{
    ViewData["Title"] = "Add a Pet";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Add New Pet</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Bella" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Species" class="control-label"></label>
                        <select asp-for="Species" class="form-control">
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Bird">Bird</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Breed" class="control-label"></label>
                        <input asp-for="Breed" class="form-control" placeholder="e.g. Labrador" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Weight" class="control-label">Weight (kg)</label>
                        <input asp-for="Weight" type="number" step="0.1" class="form-control" />
                    </div>
                </div>

                <form asp-action="Edit" enctype="multipart/form-data">

                    <div class="mb-4">
                        <label asp-for="ImageFile" class="form-label">Profile Picture</label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        <div class="form-text">Supported formats: JPG, PNG, GIF.</div>

                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="mt-2">
                                <small class="text-muted">Current Image:</small><br />
                                <img src="@Model.ImageUrl" alt="Current Pet Image" class="img-thumbnail"
                                    style="max-height: 100px; width: auto;" />
                            </div>
                        }
                    </div>

                </form>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Save Pet</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>