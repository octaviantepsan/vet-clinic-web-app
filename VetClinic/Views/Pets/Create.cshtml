@model VetClinic.Models.Pet

@{
    ViewData["Title"] = "Add a Pet";
}

<div class="container mt-5" style="max-width: 600px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="mb-0">Add New Pet</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="e.g. Bella" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Species" class="control-label"></label>
                        <select asp-for="Species" class="form-control">
                            <option value="Dog">Dog</option>
                            <option value="Cat">Cat</option>
                            <option value="Bird">Bird</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Breed" class="control-label"></label>
                        <input asp-for="Breed" class="form-control" placeholder="e.g. Labrador" />
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Age" class="control-label"></label>
                        <input asp-for="Age" type="number" class="form-control" />
                    </div>
                    <div class="col-md-6 form-group mb-3">
                        <label asp-for="Weight" class="control-label">Weight (kg)</label>
                        <input asp-for="Weight" type="number" step="0.1" class="form-control" />
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">Save Pet</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>