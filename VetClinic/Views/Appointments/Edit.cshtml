@model VetClinic.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-warning bg-opacity-10 text-dark border-warning py-3">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Appointment</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-3">
                            <label asp-for="DateTime" class="form-label fw-bold">Date & Time</label>
                            <input asp-for="DateTime" class="form-control" />
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PetId" class="form-label fw-bold">Patient</label>
                            <select asp-for="PetId" class="form-control" asp-items="ViewBag.PetId"></select>
                            <span asp-validation-for="PetId" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DoctorId" class="form-label fw-bold">Doctor</label>
                            <select asp-for="DoctorId" class="form-control" asp-items="ViewBag.DoctorId"></select>
                            <span asp-validation-for="DoctorId" class="text-danger"></span>
                        </div>

                        @if (User.IsInRole("Admin"))
                        {
                            <div class="mb-4 p-3 bg-light border rounded">
                                <label asp-for="Status" class="form-label fw-bold text-dark">Appointment Status</label>
                                <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<VetClinic.Models.AppointmentStatus>()">
                                </select>
                                <div class="form-text text-muted small">
                                    <i class="bi bi-info-circle-fill me-1"></i> Admin Override: Use this to "Revive" a refused appointment or confirm a pending one instantly.
                                </div>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="Status" />
                        }

                        <div class="d-flex justify-content-between">
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}