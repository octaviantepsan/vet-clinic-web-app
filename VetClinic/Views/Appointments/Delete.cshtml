@model VetClinic.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Cancellation</h5>
                </div>
                <div class="card-body p-4 text-center">
                    <h4 class="mb-3">Are you sure?</h4>
                    <p class="text-muted mb-4">
                        You are about to cancel the appointment for <strong>@Model.Pet?.Name</strong> on 
                        <br><strong>@Model.DateTime.ToString("f")</strong>.
                    </p>
                    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-block">
                            <a href="javascript:history.back()" class="btn btn-secondary px-4">No, Go Back</a>
                            <button type="submit" class="btn btn-danger px-4">Yes, Cancel It</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>