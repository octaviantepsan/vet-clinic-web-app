@model VetClinic.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-white py-3 border-bottom d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary">
                        <i class="bi bi-info-circle me-2"></i>Appointment Details
                    </h5>
                    @if (Model.Consultation != null) {
                        <span class="badge bg-success-subtle text-success border border-success px-3">Completed</span>
                    } else if (Model.DateTime < DateTime.Now) {
                        <span class="badge bg-secondary-subtle text-secondary border px-3">Expired</span>
                    } else {
                        <span class="badge bg-primary-subtle text-primary border border-primary px-3">Upcoming</span>
                    }
                </div>
                
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="text-uppercase text-muted small fw-bold">Date & Time</label>
                            <p class="fs-5 fw-bold text-dark mb-0">@Model.DateTime.ToString("MMMM dd, yyyy")</p>
                            <p class="text-muted">@Model.DateTime.ToString("h:mm tt")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="text-uppercase text-muted small fw-bold">Assigned Doctor</label>
                            <div class="d-flex align-items-center mt-2">
                                <div class="bg-light rounded-circle p-2 me-2">
                                    <i class="bi bi-person-badge text-primary"></i>
                                </div>
                                <div>
                                    <div class="fw-bold">Dr. @(Model.Doctor?.ApplicationUser?.LastName ?? "Unassigned")</div>
                                </div>
                            </div>
                        </div>

                        <hr class="text-muted opacity-25">

                        <div class="col-md-12">
                            <label class="text-uppercase text-muted small fw-bold mb-3">Patient Information</label>
                            <div class="d-flex align-items-center bg-light p-3 rounded border">
                                <div class="bg-white rounded-circle d-flex align-items-center justify-content-center me-3 shadow-sm" style="width: 50px; height: 50px;">
                                    @if (!string.IsNullOrEmpty(Model.Pet?.ImageUrl)) {
                                        <img src="@Model.Pet.ImageUrl" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;">
                                    } else {
                                        <i class="bi bi-github text-secondary fs-4"></i>
                                    }
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold">@Model.Pet?.Name</h5>
                                    <small class="text-muted">Owner: @(Model.Pet?.Owner?.Email ?? "Unknown")</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        
                        <div class="d-flex gap-2">
                            @if (Model.Consultation == null && Model.DateTime > DateTime.Now) {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-dark rounded-pill px-4">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                            }
                            @if (User.IsInRole("Admin")) {
                                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger rounded-pill px-4">
                                    <i class="bi bi-trash me-1"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>