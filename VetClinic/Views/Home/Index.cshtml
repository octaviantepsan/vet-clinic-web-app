@model VetClinic.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2>Welcome back!</h2>
            <p class="text-muted">Here is what's happening with your pets today.</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div
                class="card shadow-sm border-start border-4 @(Model.TotalUnpaidBills > 0 ? "border-danger" : "border-success") h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small">Billing Status</h6>
                    @if (Model.TotalUnpaidBills > 0)
                    {
                        <h3 class="text-danger fw-bold">$@Model.TotalUnpaidBills</h3>
                        <p class="small text-danger mb-2">Unpaid Balance</p>
                        <a asp-controller="Billing" asp-action="Index" class="btn btn-sm btn-outline-danger w-100">Pay
                            Now</a>
                    }
                    else
                    {
                        <h3 class="text-success fw-bold">$0.00</h3>
                        <p class="small text-success">All caught up!</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-start border-4 border-info h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small">Next Visit</h6>
                    @if (Model.NextAppointment != null)
                    {
                        <h5 class="fw-bold mb-0">@Model.NextAppointment.DateTime.ToString("MMM dd, HH:mm")</h5>
                        <p class="text-muted small mb-2">
                            @Model.NextAppointment.Pet?.Name with Dr.
                            @(Model.NextAppointment.Doctor?.ApplicationUser?.LastName ?? "Staff")
                        </p>
                        <span class="badge bg-info text-dark">Confirmed</span>
                    }
                    else
                    {
                        <p class="text-muted mt-2">No upcoming appointments.</p>
                        <a asp-controller="Appointments" asp-action="Create" class="btn btn-sm btn-info text-white w-100">
                            <i class="bi bi-calendar-plus"></i> Book Now
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow-sm border-start border-4 border-primary h-100">
                <div class="card-body">
                    <h6 class="text-muted text-uppercase small">Quick Actions</h6>
                    <div class="d-grid gap-2 mt-3">
                        <a asp-controller="Pets" asp-action="Create" class="btn btn-outline-primary btn-sm text-start">
                            <i class="bi bi-plus-circle me-2"></i> Add New Pet
                        </a>
                        <a asp-controller="Pets" asp-action="Index" class="btn btn-outline-secondary btn-sm text-start">
                            <i class="bi bi-heart me-2"></i> My Pets List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-5 mb-3">Recent Activity</h4>
    @if (!Model.RecentHistory.Any())
    {
        <div class="alert alert-light border">No recent medical history found.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm rounded overflow-hidden">
                <thead class="table-light">
                    <tr>
                        <th>Date</th>
                        <th>Pet</th>
                        <th>Diagnosis</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appt in Model.RecentHistory)
                    {
                        <tr>
                            <td>@appt.DateTime.ToString("MMM dd, yyyy")</td>
                            <td>
                                @if (!string.IsNullOrEmpty(appt.Pet?.ImageUrl))
                                {
                                    <img src="@appt.Pet.ImageUrl" class="rounded-circle me-2" width="30" height="30"
                                        style="object-fit:cover;">
                                }
                                @(appt.Pet?.Name ?? "Unknown")
                            </td>
                            <td>@(appt.Consultation?.Diagnosis ?? "Checkup")</td>
                            <td>
                                <a asp-controller="Pets" asp-action="Details" asp-route-id="@appt.PetId"
                                    fragment="medical-history" class="btn btn-sm btn-light">
                                    Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>