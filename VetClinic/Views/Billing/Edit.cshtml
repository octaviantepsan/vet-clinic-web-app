@model VetClinic.Models.Bill

@{
    ViewData["Title"] = "Manage Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Manage Invoice #@Model.Id</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="mb-4 p-3 bg-light rounded border">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Total Amount:</span>
                                <span class="fw-bold fs-5 text-dark">$@Model.TotalAmount.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Date Issued:</span>
                                <span class="text-dark">
                                    @(Model.Consultation?.Appointment?.DateTime.ToString("MMM dd, yyyy") ?? "N/A")
                                </span>
                            </div>
                        </div>

                        <div class="form-check form-switch mb-4 p-3 border rounded bg-white shadow-sm">
                            <input class="form-check-input ms-0 me-3" type="checkbox" role="switch" asp-for="IsPaid" style="transform: scale(1.3);">
                            <label class="form-check-label fw-bold pt-1" asp-for="IsPaid">
                                Mark as Paid
                            </label>
                            <div class="small text-muted mt-1 ms-1">Toggle this to update payment status.</div>
                        </div>

                        <div class="form-group d-none">
                            <input asp-for="TotalAmount" class="form-control" />
                            <input asp-for="ConsultationId" class="form-control" />
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save me-2"></i> Update Status
                            </button>
                            <a asp-area="Admin" asp-controller="Billing" asp-action="Index" class="btn btn-outline-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}