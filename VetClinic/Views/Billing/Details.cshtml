@model VetClinic.Models.Bill

@{
    ViewData["Title"] = "Invoice Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0 rounded-3">
                <div class="card-header bg-light py-4 border-bottom">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="fw-bold text-dark mb-0">INVOICE</h4>
                            <span class="text-muted font-monospace">#INV-@Model.Id.ToString("D5")</span>
                        </div>
                        <div class="text-end">
                            @if (Model.IsPaid) {
                                <span class="badge bg-success text-white px-3 py-2 rounded-pill fs-6">PAID</span>
                            } else {
                                <span class="badge bg-danger text-white px-3 py-2 rounded-pill fs-6">UNPAID</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row mb-5">
                        <div class="col-6">
                            <small class="text-muted text-uppercase fw-bold">Issued To</small>
                            <h6 class="fw-bold mt-1">@Model.Consultation?.Appointment?.Pet?.Owner?.Email</h6>
                            <div class="text-muted small">Pet: @Model.Consultation?.Appointment?.Pet?.Name</div>
                        </div>
                        <div class="col-6 text-end">
                            <small class="text-muted text-uppercase fw-bold">Date Issued</small>
                            <h6 class="fw-bold mt-1">@(Model.Consultation?.Appointment?.DateTime.ToString("MMM dd, yyyy") ?? "-")</h6>
                        </div>
                    </div>

                    <div class="table-responsive mb-4">
                        <table class="table table-borderless">
                            <thead class="border-bottom">
                                <tr>
                                    <th class="text-uppercase text-muted small">Description</th>
                                    <th class="text-uppercase text-muted small text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="py-3">
                                        <div class="fw-bold text-dark">Veterinary Consultation</div>
                                        <div class="small text-muted">
                                            Diagnosis: @(Model.Consultation?.Diagnosis ?? "Checkup")
                                            <br>Dr. @(Model.Consultation?.Appointment?.Doctor?.ApplicationUser?.LastName ?? "Staff")
                                        </div>
                                    </td>
                                    <td class="py-3 text-end fw-bold text-dark fs-5">
                                        $@Model.TotalAmount.ToString("N2")
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot class="border-top">
                                <tr>
                                    <td class="pt-3 fw-bold text-dark text-end">TOTAL DUE</td>
                                    <td class="pt-3 fw-bold text-primary text-end fs-4">$@Model.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        
                        <div class="d-flex gap-2">
                             <a asp-action="Print" asp-route-id="@Model.Id" target="_blank" class="btn btn-outline-dark px-4">
                                <i class="bi bi-printer me-1"></i> Print
                            </a>
                            @if (User.IsInRole("Admin")) {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4">
                                    Manage Payment
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>