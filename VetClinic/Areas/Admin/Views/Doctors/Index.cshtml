@model IEnumerable<VetClinic.Models.Doctor>

@{
    ViewData["Title"] = "Medical Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark"><i class="bi bi-people-fill text-primary me-2"></i>Medical Staff</h2>
            <p class="text-muted mb-0">Manage the clinic's doctors and specialists.</p>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary px-4 shadow-sm">
                <i class="bi bi-person-plus-fill me-2"></i>Add New Doctor
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-3 overflow-hidden">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="mb-0 fw-bold text-dark">Registered Doctors</h5>
        </div>
        
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 text-uppercase text-muted small fw-bold">Doctor Name</th>
                        <th class="text-uppercase text-muted small fw-bold">Specialization</th>
                        <th class="text-uppercase text-muted small fw-bold">Contact Email</th>
                        <th class="text-uppercase text-muted small fw-bold">Bio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-badge-fill fs-5"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">Dr. @(item.ApplicationUser?.FirstName ?? "") @(item.ApplicationUser?.LastName ?? "Unknown")</div>
                                        <div class="small text-muted">ID: @item.Id</div>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <span class="badge bg-info-subtle text-info-emphasis border border-info rounded-pill px-3">
                                    @(item.Specialization ?? "General Practitioner")
                                </span>
                            </td>

                            <td>
                                <a href="mailto:@item.ApplicationUser?.Email" class="text-decoration-none text-secondary">
                                    <i class="bi bi-envelope me-1"></i> @(item.ApplicationUser?.Email ?? "No Email")
                                </a>
                            </td>

                            <td style="max-width: 300px;">
                                @if (!string.IsNullOrEmpty(item.Bio))
                                {
                                    <span class="text-muted small text-truncate d-block" style="max-width: 280px;" title="@item.Bio">
                                        @item.Bio
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted small fst-italic">No bio provided.</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="display-1 text-muted opacity-25 mb-3"><i class="bi bi-person-dash"></i></div>
                <h5 class="text-muted">No doctors found.</h5>
                <p class="text-muted small">Click "Add New Doctor" to get started.</p>
            </div>
        }
    </div>
</div>